{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "outDir": "./dist",
        "removeComments": true,
        "strict": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "inlineSourceMap": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": true,
		"types": [
			"discord.js",
			"klasa",
			"node"
		]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}